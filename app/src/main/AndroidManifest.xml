<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.zucc.eternallove.userinterface">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name = ".ui.activities.LinearActivity"
            android:label = "@string/linear_layout">
        </activity>
        <activity android:name=".ui.activities.GridActivity"
            android:label="@string/grid_layout">
        </activity>
        <activity android:name=".ui.activities.DrawerActivity"
            android:label="@string/drawer_layout">
        </activity>
        <activity android:name = ".ui.activities.SlidingPaneActivity"
            android:label = "@string/sliding_layout">
        </activity>
        <activity
            android:name = ".ui.activities.ViewPagingActivity"
            android:label = "@string/paging_layout">
        </activity>
    </application>

</manifest>